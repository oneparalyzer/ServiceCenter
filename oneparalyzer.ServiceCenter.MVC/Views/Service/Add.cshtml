@model ServiceVM

<p class="text-center fs-1">Добавить услугу</p>

<form method="post"asp-controller="Service" asp-action="Add">
  <div class="form-group">
    <label>Укажите название услуги</label>
    <input type="text" class="form-control" asp-for="AddServiceVM.Title">
    <span asp-validation-for="AddServiceVM.Title"></span>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Укажите стоимость услуги</label>
    <input type="number" class="form-control" asp-for="AddServiceVM.Price">
        <span asp-validation-for="AddServiceVM.Price"></span>
  </div>
  <button type="submit" class="btn btn-primary">Добавить</button>
</form>
