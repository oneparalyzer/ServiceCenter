@model ServiceVM

<p class="text-center fs-1">Услуги</p>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Услуга</th>
            <th scope="col">Цена</th>
            <th scope="col">Удалить</th>
            <th scope="col">Обновить</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model.GetServicesDTO)
        {
            <tr>
                <td>@service.Title</td>
                <td>@service.Price</td>
                <td>
                    <form method="post" asp-controller="Service" asp-action="Remove">
                        <input type="hidden" value="@service.Id" asp-for="RemoveServiceDTO.Id"/>
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
                <td>
                    <form method="get" asp-controller="Service" asp-action="Update">
                        <input type="hidden" value="@service.Id" asp-for="UpdateServiceDTO.Id"/>
                        <button type="submit" class="btn btn-warning">Обновить</button>
                    </form>
                </td>
            </tr>
        }       
    </tbody>
</table>
