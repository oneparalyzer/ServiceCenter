@model SpareVM

<p class="text-center fs-1">Добавить комплектующие</p>

<form method="post"asp-controller="Spare" asp-action="Add">
    <div class="form-group">
        <label>Укажите название комплектующиего</label>
        <input type="text" class="form-control" asp-for="AddSpareDTO.Title">
        <span asp-validation-for="AddSpareDTO.Title"></span>
    </div>

    <div class="form-group">
        <label>Укажите название устройства</label>
        <input type="text" class="form-control" asp-for="AddSpareDTO.Device">
        <span asp-validation-for="AddSpareDTO.Device"></span>
    </div>

    <div class="form-group">
        <label>Укажите описание</label>
        <input type="text" class="form-control" asp-for="AddSpareDTO.Details">
    </div>

    <div class="form-group">
        <label>Укажите цену</label>
        <input type="number" class="form-control" asp-for="AddSpareDTO.Price">
        <span asp-validation-for="AddSpareDTO.Price"></span>
    </div>

    <div class="form-group">
        <label>Укажите колличество комплектующих</label>
        <input type="number" class="form-control" asp-for="AddSpareDTO.Quantity">
        <span asp-validation-for="AddSpareDTO.Quantity"></span>
    </div>

    <button type="submit" class="btn btn-primary">Добавить</button>
</form>
